#ALIAS {endSpell %1 -- %2} {
  #FORMAT {_lastSpell} {[<118>%-19s<088>] %s} {%2} {%1};
  #SUB {%1} {$_lastSpell};
  tick;
};

#ALIAS {warnSpell %1 -- %2} {
  #FORMAT {_lastSpell} {[<138>%-19s<088>] %s} {%2} {%1};
  #SUB {%1} {$_lastSpell};
  tick;
};
